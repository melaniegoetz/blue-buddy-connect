<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/profile_history_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        android:padding="2dp"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_history_meeting_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:alpha="0.4"/>
            <TextView
                android:id="@+id/profile_history_meeting_time"
                android:paddingBottom="5dp"
                android:paddingTop="45dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/profile_history_meeting_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_history_meeting_time"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/profile_history_meeting_attendees"
                android:layout_below="@id/profile_history_meeting_location"
                android:paddingTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="15sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
